<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.buoi2_laptrinhphantan.tracnghiem.MultipleChoiceController">
    <Label text="Câu hỏi 1: Java?"/>
    <CheckBox fx:id="option1" text="A. Một ngôn ngữ lập trình"/>
    <CheckBox fx:id="option2" text="B. Một loại cà phê"/>
    <CheckBox fx:id="option3" text="C. Một hệ điều hành"/>
    <CheckBox fx:id="option4" text="D. Cả A và B"/>
    <Button text="Submit" onAction="#submitQuiz"/>
    <Label fx:id="scoreLabel"/>
</VBox>
