<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" fx:controller="com.example.buoi1laptrinhphantan.BMICalculator"
      xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Body Mass Index Calculator"/>
    <HBox spacing="20.0">
        <Label text="Weight (kg):"/>
        <TextField fx:id="weightTextField"/>
    </HBox>
    <HBox spacing="20.0">
        <Label text="Height (m):"/>
        <TextField fx:id="heightTextField"/>
    </HBox>
    <Button fx:id="calculateButton" text="Calculate BMI"/>
    <Label fx:id="resultLabel"/>
</VBox>
